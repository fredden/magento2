<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateWidgetWithEnabledBlockAndStoreViewActionGroup" extends="AdminCreateWidgetWithBlockActionGroup">
        <annotations>
            <description>EXTENDS: AdminCreateWidgetWithBlockActionGroup. Creates the provided Widget with enabled block and a specified store view name instead of using widget.store_id.</description>
        </annotations>
        <arguments>
            <argument name="storeName" type="string"/>
        </arguments>
        <remove keyForRemoval="chooseStatus"/>
        <selectOption selector="{{AdminNewWidgetSection.blockStatus}}" userInput="Enable" stepKey="chooseStatusEnabled" after="waitForLoadBlocks"/>
        <remove keyForRemoval="selectWidgetStoreView"/>
        <selectOption selector="{{AdminNewWidgetSection.widgetStoreIds}}" userInput="{{storeName}}" stepKey="selectWidgetStoreViewByName" after="fillWidgetTitle"/>
    </actionGroup>
</actionGroups>
