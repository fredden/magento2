<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminFilterCmsBlocksAndPagesByTitleWithBackslashTest">
        <annotations>
            <features value="Cms"/>
            <stories value="Filter cms block and pages by title"/>
            <title value="Admin can filter cms blocks and pages grid by title containing backslash"/>
            <description value="This test case verifies filtering cms blocks and pages by titles containing a backslash"/>
            <severity value="MAJOR"/>
            <testCaseId value="AC-15053"/>
            <group value="Cms"/>
        </annotations>
        <before>
            <!--  Step 1: Create a cms block with title magento\store -->
            <createData entity="_emptyCmsBlock" stepKey="createTargetBlock">
                <field key="title">Magento\Store</field>
            </createData>
            <!-- Step 4: Create cms page with title magento\store -->
            <createData entity="_emptyCmsPage" stepKey="createTargetPage">
                <field key="title">Magento\Store</field>
            </createData>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
        </before>
        <after>
            <!-- Delete created block and page -->
            <deleteData createDataKey="createTargetBlock" stepKey="deleteTargetBlock"/>
            <deleteData createDataKey="createTargetPage" stepKey="deleteTargetPage"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logoutOfAdmin"/>
        </after>
        <!-- Step 2: Input magento\store in title filter to search and then check the search result -->
        <actionGroup ref="AdminOpenCmsBlocksGridActionGroup" stepKey="openCmsBlocksGrid"/>
        <actionGroup ref="ClearFiltersAdminDataGridActionGroup" stepKey="resetGridFilters"/>
        <waitForElementClickable selector="{{AdminDataGridHeaderSection.filters}}" stepKey="waitToExpandFilters"/>
        <click selector="{{AdminDataGridHeaderSection.filters}}" stepKey="expandFilters"/>
        <waitForElementVisible selector="{{AdminDataGridHeaderSection.filterFieldInput('title')}}" stepKey="waitToFillTitleFilter"/>
        <fillField selector="{{AdminDataGridHeaderSection.filterFieldInput('title')}}" userInput="$createTargetBlock.title$" stepKey="fillTitleFilter"/>
        <waitForElementClickable selector="{{AdminDataGridHeaderSection.applyFilters}}" stepKey="waitToApplyFilters"/>
        <click selector="{{AdminDataGridHeaderSection.applyFilters}}" stepKey="applyFilters"/>
        <!--Step 3: Verify the created block appears in the filtered results -->
        <waitForText selector="{{BlockPageActionsSection.blockGridRowByTitle($$createTargetBlock.title$$)}}" userInput="$createTargetBlock.title$" stepKey="seeBlockInGrid"/>
        <actionGroup ref="ClearFiltersAdminDataGridActionGroup" stepKey="clearGridFiltersIfAny"/>
        <!-- Step 5: Input magento\store in title filter to search and then check the search result -->
        <actionGroup ref="AdminOpenCMSPagesGridActionGroup" stepKey="openCmsPagesGrid"/>
        <actionGroup ref="ClearFiltersAdminDataGridActionGroup" stepKey="resetPageGridFilters"/>
        <waitForElementClickable selector="{{AdminDataGridHeaderSection.filters}}" stepKey="waitToExpandPageFilters"/>
        <click selector="{{AdminDataGridHeaderSection.filters}}" stepKey="expandPageFilters"/>
        <waitForElementVisible selector="{{AdminDataGridHeaderSection.filterFieldInput('title')}}" stepKey="waitToFillPageTitleFilter"/>
        <fillField selector="{{AdminDataGridHeaderSection.filterFieldInput('title')}}" userInput="$createTargetPage.title$" stepKey="fillPageTitleFilter"/>
        <waitForElementClickable selector="{{AdminDataGridHeaderSection.applyFilters}}" stepKey="waitToApplyTheFilters"/>
        <click selector="{{AdminDataGridHeaderSection.applyFilters}}" stepKey="applyPageFilters"/>
        <!--Step 6: Verify the created block appears in the filtered results -->
        <waitForText selector="{{CmsPagesPageActionsSection.pagesGridRowByTitle($$createTargetPage.title$$)}}" userInput="$createTargetPage.title$" stepKey="seePageInGrid"/>
        <actionGroup ref="ClearFiltersAdminDataGridActionGroup" stepKey="clearGridFilters"/>
    </test>
</tests>
