<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSaveWidgetActionGroup">
        <annotations>
            <description>Clicks on the Save Widget button and verifies the success message.</description>
        </annotations>
        <click selector="{{AdminNewWidgetSection.saveWidget}}" stepKey="clickSaveWidget"/>
        <waitForPageLoad stepKey="waitForWidgetSave"/>
        <waitForText userInput="The widget instance has been saved." stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>
